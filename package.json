{
  "name": "music-producer-lab",
  "version": "1.0.0",
  "description": "Interactive music production learning platform with B2B features",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "db:setup": "node database/execute-schema.js",
    "db:migrate": "node database/execute-migration.js",
    "content:align-sources": "node scripts/align-lesson-sources.js",
    "content:crosscheck": "node scripts/content-source-crosscheck.js",
    "content:crosscheck:strict": "node scripts/content-source-crosscheck.js --strict",
    "typecheck": "tsc --noEmit",
    "ci:check": "npm run lint && npm run typecheck",
    "db:schema:check": "node scripts/check-schema-parity.js"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "jose": "^6.1.3",
    "next": "^16.1.6",
    "next-auth": "^4.24.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^6.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "eslint": "^9.18.0",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
